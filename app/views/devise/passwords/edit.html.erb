<div class="row tw-form">
  <div class="col-lg-4 col-lg-offset-4">
    <div class="well">
      <h4><b>Change your password</b></h4>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password",autocomplete: "off" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat Password",autocomplete: "off" %>
            </div>
            <div class="form-group">
              <%= f.submit "Change password", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
